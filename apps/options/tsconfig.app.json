{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "moduleResolution": "bundler",
        "target": "ESNext",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "module": "ESNext",
        "sourceMap": true,
        "types": ["svelte", "node", "vite/client"],
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "checkJs": true,
        "allowJs": true,
        "resolveJsonModule": true,
    },
    "files": [],
    "include": [],
    "references": [
        {
            "path": "./tsconfig.app.json"
        },
        {
            "path": "./tsconfig.spec.json"
        }
    ],
    "exclude": [
        "vite.config.ts",
        "vite.config.mts",
        "vitest.config.ts",
        "vitest.config.mts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx",
        "src/**/*.test.js",
        "src/**/*.spec.js",
        "src/**/*.test.jsx",
        "src/**/*.spec.jsx"
    ]
}
